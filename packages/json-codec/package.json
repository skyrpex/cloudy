{
  "name": "@cloudy-ts/json-codec",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "unbuild",
    "lint": "eslint --ext ts .",
    "test": "ava"
  },
  "dependencies": {
    "@cloudy-ts/opaque-type": "workspace:^"
  },
  "devDependencies": {
    "@cloudy-ts/esm-node": "workspace:^",
    "ava": "^4.2.0",
    "unbuild": "^0.7.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=@cloudy-ts/esm-node"
    ],
    "files": [
      "**/*.test.ts"
    ]
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "require": "./dist/index.cjs",
        "import": "./dist/index.mjs",
        "types": "./dist/index.d.ts"
      }
    }
  }
}
