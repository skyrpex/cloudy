{
  "tasks": {
    "build": {
      "name": "build",
      "steps": [
        {
          "exec": "tsup"
        }
      ]
    },
    "format": {
      "name": "format",
      "steps": [
        {
          "exec": "prettier --check '**/*.ts'"
        }
      ]
    },
    "format:fix": {
      "name": "format:fix",
      "steps": [
        {
          "exec": "prettier --write '**/*.ts'"
        }
      ]
    },
    "lint": {
      "name": "lint",
      "steps": [
        {
          "exec": "eslint --ext ts ."
        }
      ]
    },
    "lint:fix": {
      "name": "lint:fix",
      "steps": [
        {
          "exec": "eslint --ext ts . --fix"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests",
      "steps": [
        {
          "exec": "ava"
        }
      ]
    }
  },
  "env": {
    "PATH": "$(npx -c \"node -e \\\"console.log(process.env.PATH)\\\"\")"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
