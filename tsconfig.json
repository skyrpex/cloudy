{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": false,
    "resolveJsonModule": true,
    "paths": {
      "@cloudy-ts/*": ["./packages/*", "./tools/*"]
    }
  }
}
