{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "release": {
      "dependsOn": [
        "^release"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "@cloudy-ts/esm-node#build"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": [
        "@cloudy-ts/eslint-plugin#build"
      ],
      "outputs": []
    }
  }
}
